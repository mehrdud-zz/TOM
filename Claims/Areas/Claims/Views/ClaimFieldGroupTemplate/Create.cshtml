@model ModelsLayer.ClaimFieldGroupTemplate

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Home/WillisMaster_CRUD.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Field Group</legend>



        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="buttons">
            <input type="submit" value="Create" />
            
            <input type="button" value="Back to List" onclick="changeWindowLocation('/Claims/ClaimTemplate/Edit/@(Request.QueryString["ClaimTemplateID"])');" />
        </div>

        <input type="hidden" id="ClaimTemplateID" />
    </fieldset>
}
 

<script type="text/javascript">
    $(document).ready(function () {
        var claimTemplateId = GetQueryStringValue("ClaimTemplateID");
        $("#ClaimTemplateID").val(claimTemplateId);

    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



