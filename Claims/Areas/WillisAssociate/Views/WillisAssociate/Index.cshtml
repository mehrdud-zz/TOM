@using Kendo.Mvc.UI

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Home/WillisMaster_CRUD.cshtml";
}

<style>
    .dialog_style1 {
        display: inline-block;
        overflow: hidden;
    }

    #dialog_trigger:hover {
        cursor: pointer;
    }

    #dialog {
        overflow: hidden;
    }
</style>




<div style="display: inline-block; *display:inline; zoom:1;width: 98%; height: 600px;vertical-align: middle;text-align:center;">
    @Html.Action("Reports", "WillisAssociate", new {area="WillisAssociate"})
</div>



<div>

    <a id="dialog_trigger" style="color: black;">
        <table>
            <tr>
                <td>
                    <img src="~/content/images/step.png" />
                </td>
                <td>
                    <h3>Help me setup a new claim template for my client</h3>
                    <p>
                        This step-by-step guide would help you setup a new claim template for your client.&nbsp;Click here


                    </p>
                    <div>
                        <div id="dialog">
                            <iframe id="frameContent" scrolling="no" src="/WillisAssociate/WillisAssociate/Wizard/" style="display: inline-block; width: 100%; height: 100%; margin: 0; padding: 0; overflow: hidden;"></iframe>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </a>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        $("#dialog").dialog({

            autoOpen: false,
            position: 'center',
            title: 'EDIT',
            draggable: false,
            width: 1000,
            height: 550,
            resizable: false,
            modal: true,
            dialogClass: 'dialog_style1'

        });

        $("#dialog_trigger").on("click", function () {

            $("#dialog").dialog("open");
            return false;
        });
    })
</script>

 
 
 